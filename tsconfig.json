{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,  
    "target": "esnext"
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "bedrock/src/client"
  ]
}
